{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": false,
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": [
    "server/**/*",
    "server/types/**/*.d.ts",
    "shared/**/*", 
    "lib/**/*",
    "services/**/*",
    "client/src/**/*",
    "*.ts",
    "*.js",
    "*.mjs"
  ],
  "typeRoots": ["./node_modules/@types", "./server/types"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}